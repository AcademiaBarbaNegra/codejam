<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-5">
            <div class="card card-user">
                <div class="image">
                    <%= image_tag "background.jpg" %>
                </div>
                <div class="content">
                    <div class="author">
                        <%= image_tag(@user.photo.url(:square) , class:"avatar border-white") %>
                      <h4 class="title"><%= @user.name %><br />
                         <a href="#"><small><%= @user.email %></small></a>
                      </h4>
                    </div>
                    <p class="description text-center">
                        <%= @user.bio %>
                    </p>
                </div>
                <hr>
                <div class="text-center">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-1">
                            <h5><%= @user.courses.count %><br /><small>Cursos</small></h5>
                        </div>
                        <div class="col-md-4">
                            <h5><%= @user.goals.count %><br /><small>Metas</small></h5>
                        </div>
                        <div class="col-md-3">
                            <h5><%= @user.user_connections.count %><br /><small>Contatos</small></h5>
                        </div>
                    </div>
                </div>
            </div>
            <% if @user.user_connections.count!=0 %>
            <div class="card">
                <div class="header">
                    <h4 class="title">Conex√µes</h4>
                </div>
                <div class="content">
                    <div class="row">
                        <% @user.users.each do |connection| %>
                        <div class="col-xs-3 text-center">
                            <div class="avatar">
                                <%= link_to user_path(connection) do %>
                                    <%= image_tag(connection.photo.url(:small), class:"img-circle img-no-padding img-responsive") %>
                                <% end %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <% end %>
            <% if @user.goals.count!=0 %>
            <div class="card">
                <div class="header">
                    <h4 class="title">Metas</h4>
                </div>
                <div class="content">
                    <div class="row">
                        <% @user.goals.each do |goal| %>
                        <div class="col-xs-12">
                            <div>
                               <%= link_to goal_path(goal) do %>
                                    <h4><%= goal.name %></h4>    
                               <% end %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <div class="col-lg-8 col-md-7">
            <% @user.courses.each do |course| %>
            <div class="card card-user">
                <div class="row" style="min-height: 200px;">
                    <div class="col-md-3">
                        <div class="panel-card">
                            <%= link_to course_path(course) do %>
                                <%= image_tag(course.picture.url(:square) , class:"avatar border-white") %>
                                <h4 class="title"><%= course.name %><br /></h4>
                            <% end %>
                              
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="content">
                            <h3><%= link_to course.org.name, org_path(course.org) %></h3>
                            <p><small><%= course.intro %></small></p>
                        </div>
                            
                    </div>
                    <div class="col-md-3">
                        <div class="content">
                            <div class="row">
                               <div class="icon-big icon-warning text-center vertically-align-icon col-xs-4 col-xs-offset-2">
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="col-xs-4 text-center">
                                    <h3><%= course.grade %></h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="icon-big text-center vertically-align-icon col-xs-4 col-xs-offset-2
                                <% if course.grade!=nil %> icon-default" style="color: silver;" <%else%>icon-success"<%end%> >
                                    <i class="fa fa-check-circle-o"></i>
                                </div>
                                <div class="col-xs-4">
                                    <h3></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>


    </div>
</div>




