<div class="content">
   <div class="container-fluid">
       <div class="row">
           <div class="col-lg-4 col-md-5">
               <div class="card card-user">
                   <div class="image">
                       <%= image_tag "background.jpg" %>
                   </div>
                   <div class="content">
                       <div class="author">
                           <%= image_tag("faces/face-2.jpg", class:"avatar border-white") %>
                           <h4 class="title">
                               <%= link_to user.email, user_path(user) %>
                               <br/>
                               <small><%= user.email %></small>
                           </h4>
                       </div>
                        <p class="description text-center">
                          <button type="submit" class="btn btn-info btn-fill btn-wd vertically-align">Ver cursos</button>
                       </p>
                   </div>
                   <hr>
                   <div class="text-center">
                       <div class="row">
                           <div class="col-md-5 col-md-offset-1">
                                <h5>100<br /><small>Cursos</small></h5>
                           </div>
                           <div class="col-md-5">
                                <h5>1000<br /><small>Alunos</small></h5>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>