<!--Método dos cursos-->

<div class="container-fluid">
<div class="row">
    <div class="col-lg-4 col-md-5">
        <div class="card card-user">
            <div class="image">
                <%= image_tag @course.cover %>
            </div>
            <div class="content">
                <div class="author">
                  <%= image_tag(@course.picture, class:"avatar border-white") %>
                  <h4 class="title"><%= @course.name %><br />
                     <small><%= link_to @course.org.name, org_path(@course.org) %></small>
                  </h4>
                </div>
                <p class="description text-center">
                    <%= @course.intro %>
                </p>
            </div>
            <hr>
            <div class="text-center">
                <div class="row">
                    <div class="col-md-3 col-md-offset-1">
                        <h5><%= @course.capacity %><br /><small>Vagas</small></h5>
                    </div>
                    <div class="col-md-4">
                       <h5><%= @course.start %><br /><small>Início</small></h5>
                    </div>
                    <div class="col-md-3">
                      <h5><%= @course.end %><br /><small>Término</small></h5>
                    </div>
                </div>
                <hr>
                 <div class="row">
                    <h5>R$ <%= @course.price %><br /><small>Preço</small></h5>
                </div>
            </div>
        </div>
        
        
    <%if @course.users.any? %>

        <div class="card">
            <div class="header" style="text-align:center">
                <h4 class="title">Inscritos</h4>
            </div>
            <div class="content">
                <ul class="list-unstyled team-members">
                    <% @course.users.each do |user| %> 
                            <li>
                                <div class="row">
                                    <div class="col-xs-3">
                                        <div class="avatar">
                                            <img src=<%= user.photo%> alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <%= user.name%>
                                    </div>
                                    <div class="col-xs-3 text-right">
                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-mail-forward"></i></btn>
                                    </div>
                                </div>
                            </li>
                        <%end%>
                </ul>
            </div>
        </div>
    <%end%>
    
    </div>
    <div class="col-lg-8 col-md-7">
        <div class="card">
            <div class="header">
                <div class ="col-lg-8">
                    <h2 class="title" class="text-center"><%= @course.name %></h2>
                </div>
                <div class ="col-lg-4">
                    <%= link_to "Inscrever-se", buy_path , class:"btn btn-info btn-fill btn-wd"%>
                </div>
            </div>
            <div class="row"></div>
            <div class="content">
                <h3>Descrição</h3>
                <p><%= @course.description %></p>
                 <hr>
                <h3>Ementa</h3>
                <p><%= @course.content %></p>
            </div>
        </div>
   
         <%if @course.owner %>
         
             <div class="card card-user">
                <div class="header">
                    <h3>Responsáveis</h3>
                </div>
                <div class="content">
                        <div class="row">
                            <div  class=" content col-md-3 col-md-offset-1">
                                     <%= image_tag(@course.owner.photo, class:"avatar border-white") %>
                                      <h4 class="title"><%@course.owner.name%></h4>
                            </div>
                            <div class="col-md-7 card-user description">
                                <p class="vertically-align">
                                        <%= @course.owner.bio %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
        <%end%>   
        
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <div class="card">
                        <div class="content">
                            <div class="row">
                                <div class="col-xs-5">
                                    <div class="icon-big icon-warning text-center vertically-align-icon">
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="numbers">
                                        <p>Nota</p><br />
                                        <%= @course.grade %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="card">
                        <div class="content">
                            <div class="row">
                                <div class="col-xs-5">
                                    <div class="icon-big icon-success text-center vertically-align-icon">
                                        <i class="fa fa-book"></i>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="numbers">
                                        <p>Nível</p><br />
                                        <%= @course.difficulty %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="card">
                        <div class="content">
                            <div class="row">
                                <div class="col-xs-5">
                                    <div class="icon-big icon-danger text-center vertically-align-icon">
                                        <i class="fa fa-group"></i>
                                    </div>
                                </div>
                                <div class="col-xs-7">
                                    <div class="numbers">
                                        <p>Já cursaram</p><br />
                                            <%= @course.participants %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row"></div>
            <div class="row">
                <%if current_user == @course.owner %>
                <%= link_to 'Editar Curso', edit_course_path(@course), class:"btn btn-info btn-fill btn-wd", style:"margin:auto"%> 
                <%end%>
            </div>
            
        </div>
    </div>
    
</div>





