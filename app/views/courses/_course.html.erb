
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="card card-user">
                    <div class="image">
                        <%= image_tag course.cover %>
                    </div>
                    <div class="content">
                        <div class="author">
                          <%= image_tag(course.picture, class:"avatar border-white") %>
                          <h4 class="title"><%= course.name %><br />
                             <small><%= course.org.name %></small>
                          </h4>
                        </div>
                        <p class="description text-center">
                           <%= course.intro %>
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-3 col-md-offset-1">
                                 <h5><%= course.capacity %><br /><small>Vagas</small></h5>
                            </div>
                             <div class="col-md-4">
                               <h5><% course.start %><br /><small>Início</small></h5>
                            </div>
                            <div class="col-md-3">
                               <h5><% course.end %><br /><small>Término</small></h5>
                            </div>
                        </div>
                        <hr>
                         <div class="row">
                            <div class="col-md-4 col-md-offset-1">
                                 <h5>R$ <% course.price %><br /><small>Preço</small></h5>
                            </div>
                            <div class="col-md-5">
                                <%= link_to "Saiba mais", course_path(course), class:"btn btn-info btn-fill btn-wd vertically-align-icon"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
