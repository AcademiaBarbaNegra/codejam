
            <div class="col-lg-4 col-md-5">
                <div class="card card-user">
                    <div class="image">
                        <%= image_tag org.cover %>
                    </div>
                    <div class="content">
                        <div class="author">
                            <%= image_tag(org.picture, class:"avatar border-white") %>
                            <h4 class="title"><%= org.name%><br/>
                                <small><%= org.campus %></small>
                            </h4>
                        </div>
                         <p class="description text-center">
                           <%= link_to "Ver Cursos", org_path(org), class:"btn btn-info btn-fill btn-wd"%>
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-5 col-md-offset-1">
                                 <h5><%= org.courses.size%><br /><small>Cursos</small></h5>
                            </div>
                            <div class="col-md-5">
                                 <h5>Inserir Numero<br /><small>Alunos</small></h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
